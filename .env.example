# Core app
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase (required for auth, listings, blog, and reviews)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase admin scripts only (never expose in browser)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Backblaze B2 media storage
B2_ENDPOINT=s3.us-west-004.backblazeb2.com
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=dommedirectory
NEXT_PUBLIC_B2_PUBLIC_URL=https://f000.backblazeb2.com/file/dommedirectory

# Stripe (only needed if payments are enabled)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_replace_me

# Optional scripts
CHECK_URL=http://localhost:3000

# Optional security hardening
LEAD_EVENT_HASH_SALT=replace_with_random_secret_salt
